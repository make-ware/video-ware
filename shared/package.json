{
  "name": "@project/shared",
  "version": "0.0.1",
  "description": "Shared zod schemas for the project",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    },
    "./enums": {
      "types": "./dist/enums.d.ts",
      "import": "./dist/enums.js",
      "require": "./dist/enums.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./mutator": {
      "types": "./dist/mutator.d.ts",
      "import": "./dist/mutator.js",
      "require": "./dist/mutator.cjs"
    },
    "./utils/time": {
      "types": "./dist/utils/time.d.ts",
      "import": "./dist/utils/time.js",
      "require": "./dist/utils/time.cjs"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "import": "./dist/env.js",
      "require": "./dist/env.cjs"
    },
    "./jobs": {
      "types": "./dist/jobs.d.ts",
      "import": "./dist/jobs.js",
      "require": "./dist/jobs.cjs"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "require": "./dist/storage/index.cjs"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "require": "./dist/config/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "nodemon",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "migrate:generate": "npx pocketbase-migrate generate",
    "migrate:status": "npx pocketbase-migrate status",
    "migrate:typegen": "npx pocketbase-migrate generate-types",
    "test": "echo 'shared workspace - no tests needed'",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typegen": "pocketbase-typegen --url http://localhost:8090 --out src/types/pocketbase.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/lib-storage": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "pocketbase": "^0.26.6",
    "pocketbase-zod-schema": "^0.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "nodemon": "^3.1.11",
    "pocketbase-typegen": "^1.3.3",
    "prettier": "^3.8.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "packageManager": "yarn@4.12.0"
}
